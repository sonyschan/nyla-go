{
  "name": "nylago-llm-proxy",
  "version": "1.0.0",
  "description": "Stateless LLM proxy service for NYLA Go with Cloud Run deployment",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:e2e": "vitest run test/e2e",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t nylago-llm-proxy .",
    "docker:run": "docker run -p 8080:8080 nylago-llm-proxy",
    "deploy": "gcloud run deploy nylago-llm-proxy --source . --region northamerica-northeast2"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "dotenv": "^16.4.5",
    "hono": "^4.5.0",
    "openai": "^4.56.0",
    "pino": "^9.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "pino-pretty": "^13.1.1",
    "supertest": "^6.3.4",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "llm",
    "proxy",
    "nyla",
    "cloud-run",
    "typescript",
    "hono"
  ],
  "author": "NYLA Go Team",
  "license": "MIT"
}
